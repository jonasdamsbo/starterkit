{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build myblazor",
            "command": "dotnet",
            "type": "process",
            "args": ["build"],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/mydotnet/myblazor"
            }
        },
        {
            "label": "build myapi",
            "command": "dotnet",
            "type": "process",
            "args": ["build"],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "options": {
                "cwd": "${workspaceFolder}/mydotnet/myapi"
            }
        }
    ]
}