{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch App",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build app",
            "program": "${workspaceFolder}/dotnet/Monolith/bin/Debug/net8.0/Monolith.dll",
            "args": [],
            "cwd": "${workspaceFolder}/dotnet/Monolith",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Pages": "${workspaceFolder}/dotnet/Monolith/Route/UI/Pages",
                "/Shared": "${workspaceFolder}/dotnet/Monolith/Route/UI/Layout"
            },
            "presentation": {
                "hidden": true
            }
        },
        {
            "name": "Launch App browserless",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build app",
            "program": "${workspaceFolder}/dotnet/Monolith/bin/Debug/net8.0/Monolith.dll",
            "args": [],
            "cwd": "${workspaceFolder}/dotnet/Monolith",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Pages": "${workspaceFolder}/dotnet/Monolith/Route/UI/Pages",
                "/Shared": "${workspaceFolder}/dotnet/Monolith/Route/UI/Layout"
            },
            "presentation": {
                "hidden": true
            }
        },
        {
            "type": "pwa-msedge",
            "name": "Launch Microsoft Edge",
            "request": "launch",
            "runtimeArgs": [
                "--remote-debugging-port=9222"
            ],
            "url": "https://localhost:7192",
            "presentation": {
                "hidden": true
            }
        },
        {
            "type": "vscode-edge-devtools.debug",
            "name": "attach - Edge DevTools",
            "request": "attach",
            "url": "https://localhost:7192",
            "presentation": {
                "hidden": true
            }
        },
        {
            "type": "vscode-edge-devtools.debug",
            "request": "launch",
            "name": "launch - Edge DevTools",
            "url": "https://localhost:7192",
            "webRoot": "${workspaceFolder}",
            "presentation": {
                "hidden": true
            }
        },
    ],
    "compounds": [
        {
            "name": "Launch with default browser",
            "configurations": [
                "Launch App"
            ]
        },
        {
            "name": "Launch with in-editor browser",
            "configurations": [
                "Launch App browserless",
                "launch - Edge DevTools"
            ]
        },
        {
            "name": "Launch with edge browser",
            "configurations": [
                "Launch App browserless",
                "Launch Microsoft Edge"
            ]
        }
    ]
}